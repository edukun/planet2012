<%= form_for([@site, @site.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :comentario %><br />
    <%= f.text_area :coment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>